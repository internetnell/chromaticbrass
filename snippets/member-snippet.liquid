<style>
    .member-snippet-container {
        display: flex;
        flex-direction: column;
        outline: 0.5px solid var(--color-contrast);
        margin-top: 1px;
        margin-left: 1px;
    }

    .member-info {
        padding: var(--space-md);
        gap: var(--space-s);
        display: flex;
        flex-direction: column;
        border-top: 0.5px solid var(--color-contrast);
    }

    .member-name {
        color: var(--color-contrast);
        leading-trim: both;
        text-edge: cap;
        font-family: "Helvetica Now Display";
        font-size: var(--size-h3, 26px);
        font-style: normal;
        font-weight: 400;
        line-height: 120%;
    }

    .member-title {
        color: var(--color-contrast);
        leading-trim: both;
        text-edge: cap;
        font-family: "Pragati";
        font-size: var(--size-label-large, 18px);
        font-style: normal;
        font-weight: 400;
        line-height: 100%;
    }
</style>

<div class="member-snippet-container">
    <img class="member-img" src="{{pictureUrl}}">
    <div class="member-info">
        <div class="member-name">
            {{name}}
        </div>
        <div class="member-title">
            ({{title}})
        </div>
    </div>
</div>