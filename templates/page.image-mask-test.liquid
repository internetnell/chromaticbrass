<style>
  .image-mask-container {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    --r: 200px; /* radius of reveal */
    --x: 50%;
    --y: 50%;
  }
  .image-mask-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .image-mask-img.normal { z-index: 2; }
  .image-mask-img.inverted { z-index: 1; }
  .image-mask-container .image-mask-img.normal {
    -webkit-mask-image: radial-gradient(
      circle var(--r) at var(--x) var(--y),
      transparent 0 60%,
      rgba(0,0,0,0.3) 80%,
      rgba(0,0,0,0.7) 90%,
      black 100%
    );
            mask-image: radial-gradient(
      circle var(--r) at var(--x) var(--y),
      transparent 0 60%,
      rgba(0,0,0,0.3) 80%,
      rgba(0,0,0,0.7) 90%,
      black 100%
    );
    -webkit-mask-repeat: no-repeat;
            mask-repeat: no-repeat;
    transition: -webkit-mask-image .12s ease, mask-image .12s ease, opacity .15s ease;
    opacity: 0; /* only show mask on hover */
  }
  .image-mask-container:hover .image-mask-img.normal {
    opacity: 1;
  }

</style>

<div class="image-mask-container">
  <img
    src="https://cdn.shopify.com/s/files/1/0757/8465/0993/files/no-invert.png?v=1756941093"
    alt="No invert image"
    class="image-mask-img normal"
    width="auto"
    height="auto"
  >
  <img
    src="https://cdn.shopify.com/s/files/1/0757/8465/0993/files/invert.png?v=1756941093"
    alt="Inverted image"
    class="image-mask-img inverted"
    width="auto"
    height="auto"
  >

</div>

<script>
  (function() {
    const el = document.querySelector('.image-mask-container');
    if (!el) return;
    const update = (e) => {
      const rect = el.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      el.style.setProperty('--x', x + 'px');
      el.style.setProperty('--y', y + 'px');
    };
    el.addEventListener('pointermove', update);
    el.addEventListener('pointerdown', update); // touch fallback
  })();
</script>
