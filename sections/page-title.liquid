<style>
  .page-title-section {
    display: flex;
    flex-direction: column;
    margin: 0 var(--space-page-margin) var(--space-xxl) var(--space-page-margin);
  }
  .page-description {
    margin-top: var(--space-xxl);
    width: 75%;
    max-width: 900px;
  }
</style>

<div class="page-title-section">
  <h1 class="page-title">{{ page.title }}</h1>
  {% if page.metafields.custom.page_description %}
    <h2 class="page-description">{{ page.metafields.custom.page_description }}</h2>
  {% endif %}
</div>

