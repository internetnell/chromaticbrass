<style>
    .footer {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 0 var(--space-page-margin);
    }

    .measure {
      margin-top: 60px;
      width: 100%;
    }

    .barlines {
      border-right: 3px solid var(--color-contrast);
      border-left: 3px solid var(--color-contrast);
      display: flex;
      flex-direction: column;
      align-self: stretch;
      border-top: 1px solid var(--color-contrast);
      font-weight: 400;
      line-height: 140%;
      font-size: var(--font-size-body-large);
    }

    .line {
      display: flex;
      flex-direction: row;
      border-bottom: 1px solid var(--color-contrast);
      padding: var(--space-gutter, 16px);
      gap: 0 var(--space-gutter, 16px);
    }

    .line > div {
      width: 25%;
    }


    .clef {
      position: absolute;
      padding-left: var(--space-sm);
      height: 500px;
      margin-top: 1px;
    }
    .clickable {
      padding: var(--space-xs) 0;
    }
    .clickable:hover {
      opacity: 0.6;
      transition: opacity 0.2s;
    }
    .footer-links {
      width: 100%;
      display: flex;
      flex-direction: row;
      margin: 0 3px;
    padding-top: var(--space-lg);
    }

    .footer-empty-button{
      width: 25%;
  }
    .footer-button-container  {
      width: 25%;
    }

    .footer-link {
      display: flex;
      flex-direction: row;
      padding: var(--space-xs) var(--space-sm);
      align-items: center;
      border-radius: 50px;
      justify-content: space-between;
      text-decoration: none;
    }

    .green {
      background: var(--color-green-light);
    }

    .green:hover {
      mix-blend-mode: difference;
    }

    .purple {
      background: var(--color-purple-light);
    }

    .purple:hover {
      mix-blend-mode: difference;
    }

    .yellow {
      background: var(--color-yellow-light);
    }

    .yellow:hover {
      mix-blend-mode: difference;    }

    .clickable:hover {
      cursor: pointer;
    }
  /* ---------------- Tablet ----------------*/

    @media (max-width: 1024px) {
        .line .leading {
            margin-left: var(--space-sm);
        }
        .line > div {
        width: 33%;
        }
        .noMobile {
            display: none;
        }
        .footer-button-container  {
        width: 33.33%;
        }
    }

/* ---------------- Mobile ----------------*/
  @media (max-width: 768px) {
    .footer-links{
      flex-direction: column;
      gap: 0px;
    }
    .footer-button-container  {
      width: 100%;
    }


  }
</style>
