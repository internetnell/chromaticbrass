{% for block in section.blocks %}
 {% render 'event-snippet',
  link: block.settings.event-link,
  day: block.settings.day, 
  date: block.settings.date, 
  time: block.settings.time, 
  location: block.settings.location, 
  title: block.settings.title, 
  description: block.settings.description, 
%}
{% endfor %}

{% schema %}
{
  "name": "Events Section",
  "settings": [],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Event Title",
          "default": "Sample Event"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Event Description",
          "default": "Afrofuturism, by Shanyse Strickland (1991), is a piece Theresa May commissioned in 2021 and is written for solo trumpet with pedal effects and piano accompaniment."
        },
        {
          "type": "text",
          "id": "day",
          "label": "Day of Event",
          "default": "Friday"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "Feb 17"
        },
        {
          "type": "text",
          "id": "time",
          "label": "Time",
          "default": "1:00 PM EST"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "San Francisco"
        },
        {
          "type": "url",
          "id": "event-link",
          "label": "Event url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Events Section",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "event"
        }
      ]
    }
  ]
}
{% endschema %} 
