<style>
.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: var(--space-md) var(--space-page-margin);
}
.nav {
display: none;
}
.header-button-group {
    display: flex;
    width: 20%;
    justify-content: flex-end;
    gap: var(--space-sm);
}
.header-container p {
    width: 60%;
    text-align: center;
}
.hamburger-container {
    width: 20%;
}
.hamburger-menu {
    display: flex;
    flex-direction: column;
    gap: 7px; 
    background-color: transparent;
    border: none;
    cursor: pointer;
    width: 20px;
    padding: 15px;
    margin-left: -10px;
}
.hamburger-menu-line {
    display: flex;
    width: 20px;
    height: 1.5px;
    background-color: var(--color-contrast);
}
.hamburger-menu.active span{
    transform: translateY(-100%);
}

.hamburger-menu span::after{
    content: attr(data-text);
    position: absolute;
    left: 50%;
    top: 100%;
    transform: translateX(-50%);
    background-color: var(--color-contrast);
    z-index: 999;
}
.nav.is-open {
display: block;
}

.nav {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
}
</style>

<script>
function nav(){
    const navToggler = document.querySelector('.js-nav-toggler');

    const toggleNav = () => {
        navToggler.classList.toggle("active")
    }

    navToggler.addEventListener("click", toggleNav);
    }

    nav();


</script>

<header class="header-container">

    <div class="hamburger-container">
        <a class="hamburger-menu js-nav-toggler" aria-label="Toggle navigation" aria-expanded="false">
            <span class="hamburger-menu-line"></span>
            <span class="hamburger-menu-line"></span>
            <span class="hamburger-menu-line"></span>
            {% comment %} <span class="menu-close p-large" data-text="close">Close</span> {% endcomment %}
        </a>
    </div>

    <nav class="nav js-nav">
        <ul>
        {% for link in linklists['main-menu'].links %}
        <li class="nav-link"><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
        </ul>
    </nav>

    <p>The future of brass music</p>
    <div class="header-button-group">
        <button class="secondary-button rand-hover">Contact</button>
        <button class="rand-hover">Donate</button>
    </div>

</header>